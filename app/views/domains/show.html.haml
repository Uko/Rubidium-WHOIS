.hero-unit
  %h1= @r.domain
  %p
    %span.label{:class => label_type}= "Domain is #{@r.available? ? 'free' : 'taken'}!"
    - if @r.available?
      Hurry up and register it now!
    - else
      See the information below to find out more about the domain owner and status.
  %p
    - unless @r.available?
      =link_to "Visit home page of #{@r.domain}", "http://#{@r.domain}", :class => "btn btn-primary btn-large"
    - else
      =link_to "Here can be your registrars link!", "#", :class => "btn btn-primary btn-large"
    
- unless @r.available?
  .row-fluid
    .span3
      %h2 Status
      -puts @r.expires_on.to_s
      %dl
        %dt Expires
        %dd= date_of @r.expires_on
        %dd
          %em= "(in #{time_till @r.expires_on})"
        %dt Created On
        %dd= date_of @r.created_on
        %dt Updated On
        %dd= date_of @r.updated_on
        %dt Status
        - if @r.status.kind_of?(Array)
          - @r.status.each do |status|
            %dd= status
        - else
          %dd= @r.status
    .span4
      %h2 Nameservers
      %ul.unstyled
        - @r.nameservers.each do |ns|
          %li= ns.name.downcase
    .span5
      %h2 Contacts
      .tabbable
        %ul.nav.nav-tabs
          - @r.contacts.each_with_index do |contact, index|
            -unless contact.nil?
              %li{:class => ("active" if index == 0)}
                =link_to contact_of_type(contact.type), "\##{contact_of_type(contact.type).downcase}", 'data-toggle' => "tab"
        .tab-content
          - @r.contacts.each_with_index do |contact, index|
            -unless contact.nil?
              .tab-pane{:class => ("active" if index == 0), :id => contact_of_type(contact.type).downcase}
                =render :partial => "contact", :object => contact
      - unless @r.registrar.nil?
        %dl
          -add_list_section "Registrar name", @r.registrar.name
          -add_list_section "Registrar organization", @r.registrar.organization
          %dt Registrar URL
          %dd= link_to @r.registrar.url
.well                
  = link_to "Lookup another domain", search_domain_path, :class => "btn btn-inverse"