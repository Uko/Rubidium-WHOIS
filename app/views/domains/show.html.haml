.hero-unit
  %h1= @r.domain || @dns
  %p
    %span.label{:class => label_type}= "Domain is #{@r.available? ? 'free' : 'taken'}!"
    - if @r.available?
      Hurry up and register it now!
    - else
      See the information below to find out more about the domain owner and status.
  %p
    - unless @r.available?
      =link_to "Visit home page of #{@r.domain}", "http://#{@r.domain}", :class => "btn btn-primary btn-large", :target => "_blank"
    - else
      =link_to "Here can be your registrars link!", "#", :class => "btn btn-primary btn-large"
    
- unless @r.available?
  .row-fluid
    .span5
      %h2 Contacts
      - unless @r.registrar.nil?
        %dl
          - add_list_section "Registrar name", @r.registrar.name
          - add_list_section "Registrar organization", @r.registrar.organization
          - unless @r.registrar.url.nil?
            %dt Registrar URL
            %dd= link_to @r.registrar.url
      .tabbable
        %ul.nav.nav-tabs
          - @r.contacts.each_with_index do |contact, index|
            -unless contact.nil?
              %li{:class => ("active" if index == 0)}
                =link_to contact_of_type(contact.type), "\##{contact_of_type(contact.type).downcase+index.to_s}", 'data-toggle' => "tab"
        .tab-content
          - @r.contacts.each_with_index do |contact, index|
            - unless contact.nil?
              .tab-pane{:class => ("active" if index == 0), :id => contact_of_type(contact.type).downcase+index.to_s}
                =render :partial => "contact", :object => contact
    .span3
      %h2 Status
      %dl
        -unless @r.expires_on.nil?
          %dt Expires
          %dd= date_of @r.expires_on
          %dd
            %em= "(in #{time_till @r.expires_on})"
        - add_list_section "Created On", @r.created_on
        - add_list_section "Updated On", @r.updated_on
        - add_list_section "Status", @r.status

    .span4
      %h2 Nameservers
      %ul.unstyled
        - @r.nameservers.each do |ns|
          %li= ns.name.downcase
.well                
  = link_to "Lookup another domain", search_domain_path, :class => "btn btn-inverse"